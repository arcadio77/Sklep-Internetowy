                </tr>
            </thead>
            <tbody>
                <tr v-for="product, index in products">
                    <th scope="row">{{ index + 1 }}</th>
                    <td>ee</td>
                    <td>{{ product.ProdType }}</td>
                    <td>{{ product.ProdName }}</td>
                    <td>{{ product.ProdDescription }}</td>
