<div class="row">
    <div id="app" class="container mt-4">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Strona</th>
                    <th scope="col">Typ</th>
                    <th scope="col">Nazwa</th>
